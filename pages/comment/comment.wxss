}

.item-group {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.thumbnail {
  width: 40rpx;
  height: 50rpx;
}

.item-title {
  font-size: 32rpx;
  color: #41be57;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item-rate {
