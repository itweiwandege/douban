/* pages/detail/detail.wxss */

.item-header {
  padding: 60rpx 30rpx;
}

.item-header .item-title {
  font-size: 50rpx;
}

.item-header .item-detail {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.left-detail .item-rate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-persons {
  font-size: 30rpx;
  color: green;
  margin-left: 20rpx;
}

.item-detail .left-detail {
  flex: 1;
  margin-right: 20rpx;
}

.item-detail .right-detail {
  width: 200rpx;
  height: 300rpx;
}

.right-detail image {
  width: 100%;
  height: 100%;
}

.item-sub-rate {
  margin-top: 40rpx;
  font-size: 32rpx;
}

.item-sub-rate view {
  margin-bottom: 10rpx;
}

/* 标签页 */

.item-tags {
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.item-tags .item-tags-title {
  color: #b3b3b3;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.item-tags .item-tags-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.item-tags-list text{
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  color: #353535;
  text-align: center;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
/* 评论页 */
.comment-list-group {
   padding: 60rpx 30rpx;
}
.comment-title {
  font-size: 32rpx;
  color: green;
  margin-bottom: 10rpx;
}
.more-comment {
  color: #41be57;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}